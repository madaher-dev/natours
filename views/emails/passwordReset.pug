extends baseemail

block content
  p Hi #{firstName},
  p Forgot your password? Visit this link #{url} to reset your password.\n 
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p Please ignore if you didnt request this!
